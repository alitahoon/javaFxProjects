<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginPageController">
   <children>
      <AnchorPane fx:id="imagePane" prefHeight="720.0" prefWidth="600.0" style="-fx-background-color: #2f2b43;">
