            <Text fill="WHITE" layoutX="141.0" layoutY="622.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Healthy Care System">
               <font>
                  <Font name="Microsoft JhengHei Bold" size="32.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="loginPage" layoutX="600.0" prefHeight="720.0" prefWidth="600.0" style="-fx-background-color: #423d53;">
         <children>
            <TextField fx:id="txtUsername" layoutX="198.0" layoutY="310.0" prefHeight="30.0" prefWidth="300.0" promptText="Username" style="-fx-background-color: none; -fx-text-fill: white; -fx-border-width: 0px 0px 3px 0px; -fx-border-color: white;">
               <font>
                  <Font name="System Bold" size="16.0" />
