            <PasswordField fx:id="txtPassword" layoutX="198.0" layoutY="380.0" prefHeight="30.0" prefWidth="300.0" promptText="Password" style="-fx-background-color: none; -fx-text-fill: white; -fx-border-width: 0px 0px 3px 0px; -fx-border-color: white;">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </PasswordField>
            <FontAwesomeIconView fill="#fa2d59" glyphName="USER" layoutX="144.0" layoutY="342.0" size="35" />
            <FontAwesomeIconView fill="#fa2d59" glyphName="KEY" layoutX="138.0" layoutY="412.0" size="35" />
